<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
	<div class="container">
		<h1>Welcome to Instamarket</h1>
		<p>Your hand-picked products from all over the world</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/products/new">Add a new product</a>
		</p>
	</div>
</header>

	
	<div class="row text-center">
		<div class="col-lg-12">
			<h3>Our most popular products</h3>
		</div>
	</div>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% products.forEach ((product) =>{ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= product.image %>">
				<div class="caption">
				<h4> <%= product.name %> </h4>
				</div>
				<p>
					<a href="/products/<%= product._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>

<% }); %>
		
	</div>
</div>
<% include ../partials/footer %>
